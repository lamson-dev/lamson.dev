<script is:inline src="https://unpkg.com/typewriter-effect@latest/dist/core.js"
></script>
<script>
  const D = document.getElementById("typewriter-dev-D");
  const E = document.getElementById("typewriter-dev-E");
  const V = document.getElementById("typewriter-dev-V");

  const config = {
    cursor: "",
    loop: true,
    delay: 75,
    deleteSpeed: 35,
  };

  const typewriterD = new Typewriter(D, config);
  typewriterD
    .pauseFor(500)
    .typeString("D")
    .pauseFor(2500)
    .typeString("eveloper")
    .pauseFor(5000)
    .deleteChars(8)
    .typeString("esigner")
    .pauseFor(5000)
    .deleteChars(7)
    .typeString("reamer")
    .pauseFor(7000)
    .start();

  const typewriterE = new Typewriter(E, config);
  typewriterE
    .pauseFor(1250)
    .typeString("E")
    .pauseFor(3200)
    .typeString("ntrepreneur")
    .pauseFor(4800)
    .deleteChars(11)
    .typeString("vangelist")
    .pauseFor(5000)
    .deleteChars(7)
    .typeString("xplorer")
    .pauseFor(5000)
    .start();

  const typewriterV = new Typewriter(V, config);
  typewriterV
    .pauseFor(2000)
    .typeString("V")
    .pauseFor(4100)
    .typeString("isionary")
    .pauseFor(5500)
    .deleteChars(8)
    .typeString("ietnamese")
    .pauseFor(4800)
    .deleteChars(9)
    .typeString("oyager")
    .pauseFor(3000)
    .start();
</script>

